{
    "manifest_version": 3,
    "name": "Wikiclick",
    "version": "1.1",
    "description": "Displays a popup wikipedia summary when you highlight a term.",

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["wikiclick.js"]
        }
    ],

    "action": {
        "default_popup": "popup/popup.html"
    }
}
